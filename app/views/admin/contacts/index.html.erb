<div style="padding-left: 330px;" >
  <h1>List Contacts</h1>
  <table class="table table-bordered">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Name</th>
        <th scope="col">Email</th>
        <th scope="col">Content</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      <% @contacts.each_with_index do |contact, index| %>
        <tr>
          <td><%= index + 1 %></td>
          <td><%= contact.name %></td>
          <td><%= contact.email %></td>
          <td style="word-wrap: break-word; white-space: normal;"><%= contact.content %></td>
          <td>
              <%= button_to 'delete', admin_contact_path(contact), method: :delete,
  form: {data: {turbo_confirm: 'Are you sure?'}} %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>